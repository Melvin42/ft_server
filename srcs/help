##Download Wordpress
#
#	curl -LO https://wordpress.org/latest.tar.gz
#
##Generate secret-key for wordpress
#
#	curl -s https://api.wordpress.org/secret-key/1.1/salt/
#
#Download Php-myadmin
#
#	wget https://files.phpmyadmin.net/phpMyAdmin/5.1.1/phpMyAdmin-5.1.1-all-languages.tar.gz
#
##desactiver nginx pour liberer le port 80
#
#	sudo service nginx stop
#
##demarrer docker
#
#	systemctl start docker
#
##Creer une image docker
#
#	sudo docker build -t my_server.localhost .
#
##demarrer l'image docker
#
#	sudo docker run -dt --env AUTOINDEX=on --name=my_server -p 80:80 -p 443:443 my_server.localhost
#
#Entrer dans le conteneur
#
#	sudo docker exec -ti my_server bash
#	
